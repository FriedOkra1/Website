---
import '../styles/global.css';
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Welcome to my portfolio website" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Matrix background effect -->
    <div class="terminal-matrix"></div>
    
    <!-- Terminal Header -->
    <header class="terminal-header py-4">
      <div class="max-w-6xl mx-auto px-4">
        <div class="text-center">
          <h1 class="terminal-title text-3xl mb-2">AYUSH MADHAV KUMAR</h1>
          <p class="terminal-text text-lg">Terminal Portfolio</p>
          <p class="terminal-info text-sm">Type 'help' for available commands</p>
        </div>
      </div>
    </header>

    <!-- Terminal Navigation -->
    <nav class="terminal-nav">
      <div class="max-w-6xl mx-auto px-4">
        <div class="terminal-flex flex-wrap justify-center gap-4">
          <a href="/" class="terminal-link font-bold">HOME</a>
          <a href="#about" class="terminal-link">ABOUT</a>
          <a href="#education" class="terminal-link">EDUCATION</a>
          <a href="#experience" class="terminal-link">EXPERIENCE</a>
          <a href="#research" class="terminal-link">RESEARCH</a>
          <a href="#skills" class="terminal-link">SKILLS</a>
          <a href="#leadership" class="terminal-link">LEADERSHIP</a>
          <a href="#contact" class="terminal-link">CONTACT</a>
        </div>
      </div>
    </nav>

    <main class="terminal-scroll">
      <slot />
    </main>

    <!-- Terminal Footer -->
    <footer class="terminal-header py-4 mt-8">
      <div class="max-w-6xl mx-auto px-4 text-center">
        <p class="terminal-text">System Status: <span class="terminal-success">ONLINE</span></p>
        <p class="terminal-text text-sm">Last updated: <span class="terminal-highlight">$(date)</span></p>
      </div>
    </footer>

    <script>
      // Terminal-style smooth scrolling
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', (e) => {
          e.preventDefault();
          const href = anchor.getAttribute('href');
          if (href) {
            const target = document.querySelector(href);
            if (target) {
              target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
              });
            }
          }
        });
      });

      // Terminal typing effect for titles
      document.addEventListener('DOMContentLoaded', () => {
        const titles = document.querySelectorAll('.terminal-title');
        titles.forEach(title => {
          title.classList.add('terminal-typewriter');
        });
      });

      // Matrix rain effect
      function createMatrixRain() {
        const matrix = document.querySelector('.terminal-matrix');
        if (matrix) {
          for (let i = 0; i < 50; i++) {
            const drop = document.createElement('div');
            drop.style.position = 'absolute';
            drop.style.left = Math.random() * 100 + '%';
            drop.style.animationDelay = Math.random() * 10 + 's';
            drop.style.animationDuration = (Math.random() * 10 + 5) + 's';
            drop.textContent = Math.random() > 0.5 ? '01' : '10';
            drop.style.color = '#00ff00';
            drop.style.fontSize = '12px';
            drop.style.opacity = '0.1';
            drop.style.animation = 'matrix-fall linear infinite';
            matrix.appendChild(drop);
          }
        }
      }

      createMatrixRain();
    </script>
  </body>
</html>
