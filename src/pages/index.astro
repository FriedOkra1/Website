---
import Layout from '../layouts/Layout.astro';
import { SocialLinks } from '../components/SocialLinks';
import ResumeSection from '../components/ResumeSection.astro';
import ProjectsSection from '../components/ProjectsSection.astro';

const interests = [
  "Machine Learning",
  "Cybersecurity",
  "App/Web Development",
  "AI Research",
  "Mathematics",
  "Entrepreneurship"
];
---

<Layout title="Ayush Madhav">
  <div class="min-h-screen p-4 md:p-8">
    <div class="max-w-7xl mx-auto space-y-12">
      
      {/* Header Section */}
      <div class="text-center mb-12">
        <div class="w-32 h-3 bg-blue-600 mx-auto mb-6"></div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl tracking-tight mb-3 font-medium uppercase">
          Ayush Madhav Kumar
        </h1>
        <p class="text-lg md:text-xl text-muted-foreground mb-6 font-normal">
          Software Enthusiast
        </p>
        
        {/* Social Icons */}
        <div class="flex justify-center">
          <SocialLinks client:load />
        </div>
      </div>

      {/* Main Content - Two Column Layout */}
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-12">
        
        {/* Left Column - About Me & Interests Stacked */}
        <div class="flex flex-col gap-6">
          
          {/* About Me Section */}
          <div class="bg-blue-600 text-white p-8 border-4 border-foreground">
            <div class="w-12 h-1 bg-white mb-6"></div>
            <h2 class="text-2xl md:text-3xl mb-6 font-medium text-white">About Me</h2>
            <div class="space-y-4 text-blue-50 font-normal">
              <p>
                Passionate software developer with experience in modern web 
                technologies and machine learning. I love building innovative 
                solutions that solve real-world problems.
              </p>
              <p>
                Currently focused on cybersecurity and exploring the intersection 
                of AI and cybersecurity. Always eager to talk to people, learn new 
                technologies and contribute to open source projects.
              </p>
            </div>
          </div>

          {/* My Interests Section */}
          <div class="bg-background p-8 border-4 border-foreground flex-1">
            <div class="w-12 h-1 bg-blue-600 mb-6"></div>
            <h2 class="text-2xl md:text-3xl mb-6 font-medium">My Interests</h2>
            <div class="flex flex-col gap-3">
              {interests.map((interest) => (
                <div 
                  class="bg-background p-4 border-2 border-foreground hover:bg-muted transition-colors duration-200 font-medium"
                >
                  {interest}
                </div>
              ))}
            </div>
          </div>
        </div>

        {/* Right Column - Resume PDF */}
        <ResumeSection />
      </div>

      {/* Projects Section - Full Width */}
      <ProjectsSection />

    </div>
  </div>
</Layout>
