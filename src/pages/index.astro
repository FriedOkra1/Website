          // Trigger the terminal to open
          const terminalContainer = document.querySelector('.terminal-cli-container');
          if (terminalContainer) {
            terminalContainer.classList.add('show');
            // Focus on the terminal input
            const terminalInput = terminalContainer.querySelector('.terminal-cli-input') as HTMLInputElement;
            if (terminalInput) {
              terminalInput.focus();
            }
          }
        });
      }
    });
