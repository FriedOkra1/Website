---
import Layout from '../layouts/Layout.astro';

const socialLinks = [
  {
    name: "GitHub",
    icon: "github",
    url: "https://github.com/FriedOkra1",
    label: "github.com/FriedOkra1"
  },
  {
    name: "LinkedIn", 
    icon: "linkedin",
    url: "https://www.linkedin.com/in/ayush-madhav-kumar-848060206/",
    label: "linkedin.com/in/ayush-madhav-kumar"
  },
  {
    name: "Email",
    icon: "email",
    url: "mailto:contactayushmadhav@gmail.com",
    label: "contactayushmadhav@gmail.com"
  }
];

const resumePreviewUrl = "https://drive.google.com/file/d/1Q_CaLsKmAu267S-ashvfrOY5-YDCF7-p/preview";
const resumeDownloadUrl = "https://drive.google.com/file/d/1Q_CaLsKmAu267S-ashvfrOY5-YDCF7-p/view?usp=sharing";

const interests = [
  "Machine Learning",
  "Cybersecurity",
  "App/Web Development",
  "AI Research",
  "Mathematics",
  "Entrepreneurship"
];
---

<Layout title="Ayush Madhav">
  <div class="min-h-screen bg-white p-4 md:p-6 lg:p-8">
    <div class="max-w-7xl mx-auto">
      
      <div class="mb-6 lg:mb-8 text-center">
        <div class="bg-blue-600 h-2 w-24 mb-4 mx-auto"></div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl tracking-tight text-black">
          AYUSH MADHAV KUMAR
        </h1>
        <p class="text-lg md:text-xl lg:text-2xl text-gray-600 mt-2">
          Software Developer
        </p>
        
        <div class="flex justify-center items-center gap-4 mt-4">
          {socialLinks.map((link) => (
            link.icon === 'email' ? (
              <div class="relative email-icon-container inline-block" id="email-icon-wrapper">
                <button
                  type="button"
                  class="p-2 bg-white border-2 border-black hover:bg-gray-100 transition-colors duration-200 inline-block cursor-pointer"
                  style="margin: 0; vertical-align: middle;"
                  aria-label={link.name}
                  id="email-icon"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                  </svg>
                </button>
                <div 
                  class="email-popover absolute bottom-full left-1/2 transform -translate-x-1/2 mb-1 bg-white border-4 border-black text-black opacity-0 pointer-events-none transition-opacity duration-200 z-50"
                  id="email-popover"
                  style="margin-bottom: 4px;"
                >
                  <div class="px-4 py-2 flex items-center gap-2">
                    <span class="text-sm font-medium whitespace-nowrap">{link.label}</span>
                    <button
                      id="copy-email-btn"
                      class="p-1.5 bg-blue-600 text-white border-2 border-black hover:bg-blue-700 transition-colors duration-200 flex items-center justify-center"
                      aria-label="Copy email"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </button>
                  </div>
                  <div class="absolute top-full left-1/2 transform -translate-x-1/2" style="margin-top: -1px;">
                    <div class="w-0 h-0 border-l-[10px] border-r-[10px] border-t-[10px] border-l-transparent border-r-transparent border-t-black"></div>
                  </div>
                </div>
              </div>
            ) : (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="p-2 bg-white border-2 border-black hover:bg-gray-100 transition-colors duration-200"
                aria-label={link.name}
              >
                {link.icon === 'github' && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                )}
                {link.icon === 'linkedin' && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}
              </a>
            )
          ))}
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-5 gap-4 lg:gap-6 min-h-[600px]">
        
        <div class="lg:col-span-2 space-y-4 lg:space-y-6">
          
          <div class="bg-blue-600 text-white p-4 md:p-6 border-4 border-black flex flex-col">
            <div class="bg-white h-1 w-16 mb-3"></div>
            <h2 class="text-xl md:text-2xl mb-3">About Me</h2>
            <div class="space-y-3 text-blue-100 flex-1">
              <p>
                Passionate software developer with experience in modern web technologies 
                and machine learning. I love building innovative solutions that solve 
                real-world problems.
              </p>
              <p>
                Currently focused on cybersecurity and exploring the intersection 
                of AI and cybersecurity. Always eager to talk to people, learn new technologies and 
                contribute to open source projects.
              </p>
            </div>
          </div>

          <div class="bg-gray-50 p-4 md:p-6 border-4 border-black flex flex-col">
            <div class="bg-blue-600 h-1 w-16 mb-3"></div>
            <h2 class="text-xl md:text-2xl mb-3 text-black">My Interests</h2>
            <div class="space-y-2">
              {interests.map((interest) => (
                <div class="bg-white text-black border-2 border-black px-3 py-2 text-sm">
                  {interest}
                </div>
              ))}
            </div>
          </div>

        </div>

        <div class="lg:col-span-3 relative">
          <div class="bg-gray-50 p-4 md:p-6 border-4 border-black h-full flex flex-col">
            <div class="bg-blue-600 h-1 w-16 mb-3"></div>
            <h2 class="text-xl md:text-2xl mb-3 text-black">Resume</h2>
            
            <div class="flex-1 border-2 border-gray-300 rounded overflow-hidden relative">
              <iframe
                src={resumePreviewUrl}
                class="w-full h-full min-h-[500px]"
                title="Ayush Madhav Kumar Resume"
              ></iframe>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <script>
    const emailIconWrapper = document.getElementById('email-icon-wrapper');
    const emailPopover = document.getElementById('email-popover');
    const copyEmailBtn = document.getElementById('copy-email-btn');
    const emailAddress = 'contactayushmadhav@gmail.com';
    
    if (emailIconWrapper && emailPopover) {
      const emailIcon = document.getElementById('email-icon');
      let hideTimeout: ReturnType<typeof setTimeout> | null = null;
      let isClickToggled = false;
      
      const showPopover = () => {
        if (hideTimeout) {
          clearTimeout(hideTimeout);
          hideTimeout = null;
        }
        emailPopover.classList.remove('opacity-0', 'pointer-events-none');
        emailPopover.classList.add('opacity-100');
      };
      
      const hidePopover = (delay = 100) => {
        if (hideTimeout) {
          clearTimeout(hideTimeout);
        }
        hideTimeout = setTimeout(() => {
          if (!isClickToggled) {
            emailPopover.classList.remove('opacity-100');
            emailPopover.classList.add('opacity-0', 'pointer-events-none');
          }
          hideTimeout = null;
        }, delay);
      };
      
      emailIconWrapper.addEventListener('mouseenter', () => {
        isClickToggled = false;
        showPopover();
      });
      
      emailPopover.addEventListener('mouseenter', () => {
        showPopover();
      });
      
      emailIconWrapper.addEventListener('mouseleave', () => {
        hidePopover(150);
      });
      
      emailPopover.addEventListener('mouseleave', () => {
        hidePopover(150);
      });
      
      if (emailIcon) {
        emailIcon.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          if (hideTimeout) {
            clearTimeout(hideTimeout);
            hideTimeout = null;
          }
          
          if (emailPopover.classList.contains('opacity-0')) {
            isClickToggled = true;
            emailPopover.classList.remove('opacity-0', 'pointer-events-none');
            emailPopover.classList.add('opacity-100');
          } else {
            isClickToggled = false;
            emailPopover.classList.remove('opacity-100');
            emailPopover.classList.add('opacity-0', 'pointer-events-none');
          }
        });
      }
      
      document.addEventListener('click', (e) => {
        const target = e.target as Node;
        if (isClickToggled && target && !emailIconWrapper.contains(target) && !emailPopover.contains(target)) {
          isClickToggled = false;
          emailPopover.classList.remove('opacity-100');
          emailPopover.classList.add('opacity-0', 'pointer-events-none');
        }
      });
      
      if (copyEmailBtn) {
        copyEmailBtn.addEventListener('click', async (e) => {
          e.stopPropagation();
          try {
            await navigator.clipboard.writeText(emailAddress);
            copyEmailBtn.classList.add('bg-green-600');
            copyEmailBtn.classList.remove('bg-blue-600', 'hover:bg-blue-700');
            
            setTimeout(() => {
              copyEmailBtn.classList.remove('bg-green-600');
              copyEmailBtn.classList.add('bg-blue-600', 'hover:bg-blue-700');
            }, 2000);
          } catch (err) {
            console.error('Failed to copy email:', err);
            const textArea = document.createElement('textarea');
            textArea.value = emailAddress;
            textArea.style.position = 'fixed';
            textArea.style.opacity = '0';
            document.body.appendChild(textArea);
            textArea.select();
            try {
              document.execCommand('copy');
              copyEmailBtn.classList.add('bg-green-600');
              copyEmailBtn.classList.remove('bg-blue-600', 'hover:bg-blue-700');
              setTimeout(() => {
                copyEmailBtn.classList.remove('bg-green-600');
                copyEmailBtn.classList.add('bg-blue-600', 'hover:bg-blue-700');
              }, 2000);
            } catch (fallbackErr) {
              console.error('Fallback copy failed:', fallbackErr);
            }
            document.body.removeChild(textArea);
          }
        });
      }
      
    }
  </script>

</Layout>
