---
const resumeUrl = "/Resume.pdf";
---

<div class="bg-background border-4 border-foreground p-4 md:p-8">
  <div class="w-12 h-1 bg-blue-600 mb-6"></div>
  <h2 class="text-2xl md:text-3xl mb-6 font-medium">Resume</h2>
  
  <div class="border-2 border-foreground bg-white p-1 md:p-4 min-h-[600px] flex items-center justify-center overflow-hidden">
    <iframe
      src={resumeUrl}
      class="w-full h-full min-h-[600px] border-none"
      title="Resume PDF"
      loading="lazy"
    ></iframe>
  </div>
  
  <div class="mt-6 flex gap-4">
    <a
      href={resumeUrl}
      download="Ayush_Madhav_Kumar_Resume.pdf"
      class="flex-1 text-center p-4 border-2 border-foreground bg-background hover:bg-foreground hover:text-background transition-colors duration-200 font-medium"
    >
      Download PDF
    </a>
  </div>
</div>
